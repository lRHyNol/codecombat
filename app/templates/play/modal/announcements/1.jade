extends /templates/play/modal/announcement-modal

block config
  - showSubscribe = true

block title
  h1 Now With Pets!

block image
  img.full-width-image(src="/images/pages/play/modal/announcement/pets/bg_baked_shadows.png")

  img.pet-image.excitable.masked-image( src="/images/pages/play/modal/announcement/pets/fire_elem.png" style="top: 50%; left:45%" data-name="Kindling Elemental" data-description="Sometimes you just want to set the world on fire. Or your tent while you're sleeping..." data-flavor="\"Excellent at heating up meatmellows.\" - Alejandro")

  img.full-width-image(src="/images/pages/play/modal/announcement/pets/heroes_and_fire.png" style="top:2%")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/griffin.png" style="top: 15%; left:5%" data-name="Baby Griffin" data-description="Half eagle, half lion, all adorable." data-flavor="\"It's so adowable!\" - Lady Ida")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/raven.png" style="top: 10%; left:25%" data-name="Raven" data-description="The raven is excellent at gathering shiny bottles full of health potion for you." data-flavor="\"Caw, shinies will be mine, caw.\" - Raven")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/mimic_no_shadow.png" style="top: 55%; left:2%" data-name="Mimic" data-description="Mimics can pick up coins for you. Move them on top of coins to increase your gold supply." data-flavor="The absolute best pet.")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/cougar_no_shadow.png" style="top: 58%; left:7%;clip-path: polygon(45% 0, 100% 0, 100% 100%, 0 100%, 0 43%)" data-name="Cougar" data-description="This cat has a PhD! Purrs Happily Daily." data-flavor="Best Purr Award 2017")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/fox_no_shadow.png" style="top: 35%; left:77.5%" data-name="Blue Fox" data-description="The fox is quite talented at scaring mice out of their homes." data-flavor="\"Thump!\" - Blue Fox upon landing")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/pug_no_shadow.png" style="top: 59%; left:69%" data-name="Pugicorn" data-description="This magical pug can cast spells in battle! But, being strictly pacifist, the best it can do is shoot confetti." data-flavor="\"Bang! Haha, happy birthday!\" - Pugicorn the Magnificent")

  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/wolf_pup_no_shadow_only_wolf.png" style="top: 62%; left:79%" data-name="Wolf Pup" data-description="A hunter, a gatherer, and a mean hide-and-seek player, the wolf pup excels in all categories relating to fetch." data-flavor="\"Bark, bark bark. Bork. Borf. Burk. Bark.\" - Wolf Pup")
  img.pet-image.excitable.masked-image(src="/images/pages/play/modal/announcement/pets/ball_no_shadow_only_ball.png" style="top: 90%; left:75.75%" data-name="Red Squeaky Ball" data-description="ball.squeak()" data-flavor="\"BALL, BALL!\" \n- Wolf Pup")

  img.full-width-image(src="/images/pages/play/modal/announcement/pets/grass.png" style="position:absolute;top: 0%; left:0%")

block info
  div
    ul(style="margin: 2px")
      li Adorable! Useful! Collect 'em all!
      li Each pet has a unique function!
      li
        | Upgrade to 
        a(href="/premium" style="color: rgb(127, 127, 255)") Premium
        |  today!
